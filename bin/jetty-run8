#! /bin/bash

# Package the webapp directory and run it as a standalone jetty server...
sbt prepare-webapp && \
java ${JAVA_OPTS} \
  -Drun.mode=development -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=256m -Xmx512M -Xss2M \
  -jar ~/local/jetty-runner/jetty-runner-8.0.1.v20110908.jar \
  --jar ~/local/jetty-runner/jetty-websocket-8.0.0.M3-tests.jar \
    target/webapp
